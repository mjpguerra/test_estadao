<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="SuccessTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/greenBackground</item>
        <item name="android:background">@color/greenBackground</item>
    </style>

    <style name="ErrorTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/redBackground</item>
        <item name="android:background">@color/redBackground</item>
    </style>

    <style name="Buttom_Panel_Operation" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/button_rectangle</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">@font/asap_regular</item>
        <item name="android:textSize">@dimen/app_font_size</item>
        <item name="android:textColor">@color/custom_text_color</item>
    </style>

    <style name="Text.Title">
        <item name="android:fontFamily">@font/asap_bold</item>
        <item name="android:textSize">@dimen/app_title_size</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_left</item>
    </style>

    <style name="Text.ToolbarTitle" parent="Text">
        <item name="android:fontFamily">@font/asap_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_title_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:ellipsize">end</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="android:lines">1</item>
    </style>

</resources>
