                android:textSize="@dimen/numbers_keyboard_text_size"
                android:textColor="@color/whiteColorVar2"
                android:gravity="center"
                android:fontFamily="@font/source_sans_pro_regular"
                android:onClick="@{_ -> controller.input('0')}"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="1"
                android:textSize="@dimen/numbers_keyboard_text_size"
                android:textColor="@color/whiteColorVar2"
                android:gravity="center"
                android:fontFamily="@font/source_sans_pro_regular"
                android:onClick="@{_ -> controller.input('1')}"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="2"
                android:textSize="@dimen/numbers_keyboard_text_size"
                android:textColor="@color/whiteColorVar2"
                android:gravity="center"
                android:fontFamily="@font/source_sans_pro_regular"
                android:onClick="@{_ -> controller.input('2')}"/>

            <Button
