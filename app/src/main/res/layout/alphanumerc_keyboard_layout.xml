                android:onClick="@{_ -> controller.input('O')}"
                android:text="O"
                android:textAllCaps="false"
                android:textColor="@color/whiteColorVar2"
                android:textSize="@dimen/numbers_keyboard_text_size" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/source_sans_pro_regular"
                android:gravity="center"
                android:onClick="@{_ -> controller.input('P')}"
                android:text="P"
                android:textAllCaps="false"
                android:textColor="@color/whiteColorVar2"
                android:textSize="@dimen/numbers_keyboard_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdLineLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/source_sans_pro_regular"
                android:gravity="right|center_vertical"
                android:onClick="@{_ -> controller.input('A')}"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:text="A"
                android:textAllCaps="false"
                android:textColor="@color/whiteColorVar2"
                android:textSize="@dimen/numbers_keyboard_text_size" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
